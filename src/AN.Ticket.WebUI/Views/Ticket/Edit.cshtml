@model AN.Ticket.Application.DTOs.Ticket.EditTicketDto

@{
    ViewData["Title"] = "Editar Ticket";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    Ticket Informações
                </div>
                <div class="card-body">
                    <form asp-action="EditTicket" asp-controller="Ticket" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label for="Subject" class="form-label">Assunto</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-pencil"></i></span>
                                <input asp-for="Subject" class="form-control" readonly />
                            </div>
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Status" class="form-label">Status</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-flag"></i></span>
                                <select asp-for="Status" class="form-select">
                                    <option value="0">Em Espera</option>
                                    <option value="1">Aberto</option>
                                    <option value="2">Em Progresso</option>
                                    <option value="3">Fechado</option>
                                </select>
                            </div>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Priority" class="form-label">Prioridade</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-exclamation-triangle"></i></span>
                                <select asp-for="Priority" class="form-select">
                                    <option value="0">Baixa</option>
                                    <option value="1">Média</option>
                                    <option value="2">Alta</option>
                                </select>
                            </div>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="DueDate" class="form-label">Data de Vencimento</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                                <input asp-for="DueDate" type="datetime-local" class="form-control" />
                            </div>
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Contact" class="form-label">Contato</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="ContactName" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AccountName" class="form-label">Nome da Conta</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-building"></i></span>
                                <input asp-for="AccountName" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Telefone</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                <input asp-for="Phone" class="form-control" />
                            </div>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Salvar Alterações
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body p-3">
                    <div class="text-center mb-4">
                        <i class="bi bi-chat-left-text fs-1 text-primary"></i>
                        <h5 class="mt-2">@Model.TotalMessages</h5>
                        <p class="text-muted">Mensagens no Ticket</p>
                    </div>
                    <hr class="my-3" />

                    <div class="text-center mb-4">
                        <i class="bi bi-activity fs-1 text-warning"></i>
                        <h5 class="mt-2">@Model.TotalActivities</h5>
                        <p class="text-muted">Atividades registradas</p>
                    </div>
                    <hr class="my-3" />

                    <div class="text-center mb-4">
                        <i class="bi bi-paperclip fs-1 text-success"></i>
                        <h5 class="mt-2">@Model.TotalAttachments</h5>
                        <p class="text-muted">Anexos no Ticket</p>
                    </div>
                    <hr class="my-3" />

                    <div class="text-center">
                        <i class="bi bi-star-fill fs-1 text-warning"></i>
                        <div class="d-flex justify-content-center mt-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.SatisfactionStars)
                                {
                                    <i class="bi bi-star-fill text-warning"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star text-muted"></i>
                                }
                            }
                        </div>
                        <p class="text-muted">Satisfação do Cliente</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/contactDropdown.js"></script>
}
