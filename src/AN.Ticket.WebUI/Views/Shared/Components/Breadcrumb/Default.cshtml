@model IEnumerable<AN.Ticket.WebUI.Components.BreadcrumbItem>

<style>
.breadcrumb-nav {
    background-color: #ffffff;
    padding: 0.75rem 1rem;
    border-radius: 0.25rem;
}

.breadcrumb {
    margin-bottom: 0;
}

.breadcrumb-item {
    font-size: 1rem;
    font-weight: 500;
}

.breadcrumb-item a {
    text-decoration: none;
    color: #495057;
}

.breadcrumb-item a:hover {
    color: #0056b3;
}

.breadcrumb-item.active {
    color: #0056b3 !important;
    font-weight: 600;
}

.breadcrumb-link {
    display: flex;
    align-items: center;
}

.breadcrumb-link i {
    margin-right: 0.5rem;
}
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12 d-none d-lg-block">
            <nav aria-label="breadcrumb" class="breadcrumb-nav mb-4 border">
                <ol class="breadcrumb mb-0 py-2">
                    @foreach (var item in Model)
                    {
                        <li class="breadcrumb-item @(item == Model.Last() ? "active" : "")">
                            @if (!string.IsNullOrEmpty(item.Icon))
                            {
                                <a href="@item.Url" class="breadcrumb-link">
                                    <i class="@item.Icon"></i> @item.Name
                                </a>
                            }
                            else if (!string.IsNullOrEmpty(item.Url))
                            {
                                <a href="@item.Url" class="breadcrumb-link">@item.Name</a>
                            }
                            else
                            {
                                <span class="breadcrumb-link">@item.Name</span>
                            }
                        </li>
                    }
                </ol>
            </nav>
        </div>
    </div>
</div>
