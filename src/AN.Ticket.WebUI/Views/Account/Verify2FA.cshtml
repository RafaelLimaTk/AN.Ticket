@model AN.Ticket.WebUI.ViewModels.Account.Verify2FAViewModel

<h2>Verificar Autenticação de Dois Fatores</h2>

<form asp-action="Verify2FA" method="post">
    <div class="form-group">
        <label for="code">Código de Verificação</label>
        <input type="text" class="form-control" id="code" name="Code" required />
    </div>
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe" />
            <label class="form-check-label" for="rememberMe">Lembrar-me</label>
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="rememberMachine" name="RememberMachine" />
            <label class="form-check-label" for="rememberMachine">Lembrar este dispositivo</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Verificar</button>
</form>
